<%- include('header') %>

<div class="container fade-in">

    <div class="page-header">
        <h1>Create New Account</h1>
    </div>

    <div class="card form-card">
        <div class="card-header">
            <h2>Account Details</h2>
        </div>
        <div class="card-body">
            <form action="/accounts" method="POST">
                <div class="form-group">
                    <label class="form-label" for="owner">Owner Name</label>
                    <span class="form-sublabel">The full name of the account holder</span>
                    <input class="form-control" type="text" name="owner" id="owner" placeholder="e.g. John Doe" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="balance">Initial Balance</label>
                    <span class="form-sublabel">Starting balance in dollars</span>
                    <input class="form-control" type="number" name="balance" id="balance" placeholder="e.g. 1000" min="0" step="0.01" required>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                            <polyline points="17 21 17 13 7 13 7 21"></polyline>
                            <polyline points="7 3 7 8 15 8"></polyline>
                        </svg>
                        Create Account
                    </button>
                    <a href="/results" class="btn btn-outline">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>

<%- include('footer') %>