<%- include('header') %>

<div class="container fade-in">

    <div class="page-header">
        <h1>New Transfer</h1>
    </div>

    <div class="card form-card">
        <div class="card-header">
            <h2>Transfer Details</h2>
        </div>
        <div class="card-body">
            <form action="/transactions" method="POST">
                <div class="form-group">
                    <label class="form-label" for="from_account_id">From Account</label>
                    <span class="form-sublabel">Select the account to send money from</span>
                    <select class="form-control" name="from_account_id" id="from_account_id" required>
                        <option value="" disabled selected>Choose an account…</option>
                        <% accounts.forEach(account => { %>
                            <option value="<%= account.id %>"><%= account.owner %> — $<%= Number(account.balance).toLocaleString() %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label" for="to_account_id">To Account</label>
                    <span class="form-sublabel">Select the account to receive the money</span>
                    <select class="form-control" name="to_account_id" id="to_account_id" required>
                        <option value="" disabled selected>Choose an account…</option>
                        <% accounts.forEach(account => { %>
                            <option value="<%= account.id %>"><%= account.owner %> — $<%= Number(account.balance).toLocaleString() %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label" for="amount">Amount</label>
                    <span class="form-sublabel">The amount of money to transfer</span>
                    <input class="form-control" type="number" name="amount" id="amount" placeholder="e.g. 250" min="0.01" step="0.01" required>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                        Transfer Money
                    </button>
                    <a href="/results" class="btn btn-outline">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>

<%- include('footer') %>